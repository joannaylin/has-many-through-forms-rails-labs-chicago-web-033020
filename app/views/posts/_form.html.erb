<%= form_for @post do |f| %>
  <%= f.label "Title: " %>
  <%= f.text_field :title %> <br>

  <%= f.label "Content: " %>
  <%= f.text_field :content %> <br>

  <%= f.label "Categories: "%>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <%= f.fields_for :categories, @post.categories.build do |categories_attributes| %> <br>
      <%= categories_attributes.label "Category"%>
      <%= categories_attributes.text_field :name %> <br>
    <% end %>

  <%= f.submit %>
<% end %>
